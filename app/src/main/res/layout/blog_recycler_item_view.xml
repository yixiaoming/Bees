<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2.5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blog_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="@dimen/blog_title_text_size"/>

            <TextView
                android:id="@+id/blog_author_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/blog_title_text"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/blog_title_text"
                android:text="author"
                android:textSize="@dimen/blog_title_text_size"/>

            <TextView
                android:id="@+id/blog_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="date"
                android:textSize="@dimen/blog_title_text_size"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/blog_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/blog_item_photo_height"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/blog_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/blog_photo"
            android:maxLines="2"
            android:text="content"
            android:textSize="@dimen/blog_content_text_size"/>

    </LinearLayout>
</android.support.v7.widget.CardView>






